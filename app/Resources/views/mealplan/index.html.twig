{% extends 'base.html.twig' %}

{% block body %}
    <h1>Mealplan list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mealplan in mealplans %}
            <tr>
                <td><a href="{{ path('mealplan_show', { 'id': mealplan.id }) }}">{{ mealplan.id }}</a></td>
                <td>{{ mealplan.name }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('mealplan_show', { 'id': mealplan.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('mealplan_edit', { 'id': mealplan.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('mealplan_new') }}">Create a new entry</a>
        </li>
    </ul>
{% endblock %}
